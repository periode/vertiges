<?xml version='1.0' encoding='utf-8'?>
<widget id="io.georgeslakhdar.vertiges" version="1.0.2" android-versionCode="211130" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Les Vertiges de Georges</name>
    <description>
        Application accompagnant le spectacle "Les Vertiges de Georges"
    </description>
    <author email="pierre.depaz@gmail.com" href="https://pierredepaz.net">
        Pierre Depaz
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-targetSdkVersion" value="30" />
        <allow-intent href="market:*" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="ScrollEnabled" value="true" />
        <icon src="res/ios/icon.png" width="192" height="192" />
    </platform>
</widget>
